@page
@model SignalR.WebClient.Pages.ChatBySignalRModel
@{
    ViewData["Title"] = "Chat Page";
}

<div class="container">
    
    <h3>Chat By SignalR</h3>

    <div class="row p-1">
        <div class="col-2">Total Users:</div>
        <div class="col-4">
            <span id="lblTotalUsers">0</span>
        </div>
    </div>
    
    <div class="row p-1">
        <div class="col-2">Hub URL</div>
        <div class="col-4"><input type="text" id="txtHubUrl" value="https://localhost:7032/hubs/chatHub" readonly class="w-100" /></div>
    </div>

    <div class="row p-1">
        <div class="col-2">Id</div>
        <div class="col-4"><input type="text" id="txtConnectionId" value="-" readonly class="w-100"/></div>
    </div>

    <div class="row p-1">
        <div class="col-2">Group</div>
        <div class="col-4"><input type="text" id="txtGroup" value="admin"/></div>
    </div>

    <div class="row p-1">
        <div class="col-2">User</div>
        <div class="col-4"><input type="text" id="txtUser" value="WebClient"/></div>
    </div>
    <div class="row p-1">
        <div class="col-2">Message</div>
        <div class="col-4"><input type="text" class="w-100" id="txtMessage" value="Hello World"/></div>
    </div>
    <div class="row p-1">
        <div class="col-6 text-end">
            <input type="button" id="btnConnect" value="Connect"/>
            <input type="button" id="btnDisConnect" value="DisConnect"/>
            <br/>
            <input type="button" id="btnJoinGroup" value="Join Group"/>
            <input type="button" id="btnLeaveGroup" value="Leave Group"/>
            <br/>
            <input type="button" id="btnSend" value="Send Message To All"/>
            <input type="button" id="btnSendObject" value="Send Object To All" />
            <input type="button" id="btnSendToGroup" value="Send Message To Group"/>
            <br/>
            <input type="button" id="btnGetAllUsers" value="Get All Users" />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <hr/>
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>

<script src="/lib/microsoft-signalr/signalr.js"></script>
<script src="~/js/chatBySignalR.js"></script>
